[include]
    path = ~/.config/git/identity # user.name and user.email
[credential]
	helper = /usr/bin/pass-git-helper
[init]
	defaultBranch = main
[commit]
    verbose = true # Show commit diff in message editor
[fetch]
    prune = true
    fsckobjects = true
[alias]
    empty = "git commit --allow-empty"
[merge]
    conflictStyle = zdiff3
[diff]
	algorithm = histogram
	colorMoved = default
[push]
	autoSetupRemote = true
[branch]
	sort = -committerdate
[transfer]
	fsckobjects = true
[receive]
    fsckObjects = true
[pull]
	ff = only
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections